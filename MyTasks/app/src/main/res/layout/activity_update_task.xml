<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".UpdateTaskActivity">

    <TextView
        android:id="@+id/editTaskHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="Edit Task."
        android:textColor="@color/or1"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/updatesaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_done_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/editTaskHeading"
        android:layout_marginEnd="6dp" />

    <EditText
        android:id="@+id/updateTitleSpace"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Task Title"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@id/editTaskHeading"
        android:background="@drawable/or1_border"
        android:layout_marginTop="16dp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/editCategorySpace"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Task Category"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@id/updateTitleSpace"
        android:background="@drawable/or1_border"
        android:layout_marginTop="23dp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/updateTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter the description"
        android:padding="12dp"
        android:textSize="18sp"
        android:layout_below="@id/editCategorySpace"
        android:background="@drawable/or1_border"
        android:layout_marginTop="23dp"
        android:maxLines="1" />

</RelativeLayout>